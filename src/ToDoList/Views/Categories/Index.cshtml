@{
    ViewData["Title"] = "To Do List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ToDoList.Models.Category>


    <h2>To Do List</h2>
    <hr />
    <table class="table">
        <tr>
            <th>
                <h4>@Html.DisplayNameFor(model => model.Description)</h4>
            </th>
            <th></th>
        </tr>

            @foreach(var category in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => category.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = category.Id }) | 
                        @Html.ActionLink("Edit", "Edit", new { id = category.Id }) | 
                        @Html.ActionLink("Delete", "Delete", new { id = category.Id })
                    </td>
                </tr>
            }


    </table>
    <p>@Html.ActionLink("Add new item", "Create")</p>

 